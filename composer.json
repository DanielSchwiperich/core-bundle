{
	"name": "contao/module-core",
	"type": "library",
	"description": "Contao 4 core module",
	"license": "LGPL-3.0+",
	"authors": [
		{
			"name": "Leo Feyer",
			"homepage": "https://github.com/leofeyer"
		}
	],
	"require": {
		"php": ">=5.4.0",
		"contao/contao-library": "dev-feature/symfony2",
        "michelf/php-markdown": "~1.4",
        "phpspec/php-diff": "~1.0",
        "simplepie/simplepie": "~1.3",
        "symfony/framework-bundle": "~2.5",
        "tecnick.com/tcpdf": "~6.0"
	},
    "require-dev": {
        "phpunit/phpunit": "~3.7"
    },
	"autoload": {
        "psr-4": {
            "Contao\\Bundle\\CoreBundle\\": "src/"
        },
		"classmap": [
			"src/Resources/classes/",
			"src/Resources/controllers/",
			"src/Resources/drivers/",
			"src/Resources/elements/",
			"src/Resources/forms/",
			"src/Resources/hybrids/",
			"src/Resources/maintenance/",
			"src/Resources/models/",
			"src/Resources/modules/",
			"src/Resources/pages/",
			"src/Resources/uploader/",
			"src/Resources/widgets/"
		]
	},
    "prefer-stable": true,
    "minimum-stability": "dev"
}
